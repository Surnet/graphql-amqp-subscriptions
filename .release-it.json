{
  "hooks": {
    "before:init": "npm ci && npm run build && node bin/prepublish.js"
  },
  "git": {
    "requireCleanWorkingDir": false,
    "requireUpstream": true,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "[ci skip] Release ${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publishPath": "/lib"
  }
}
